#!/bin/bash

# Find the trimorph-tui binary and run it
TUI_DIR="/home/gentoo/spectre_enviroment/Trimorph/tui"

if [ -f "$TUI_DIR/target/debug/trimorph-tui" ]; then
    exec "$TUI_DIR/target/debug/trimorph-tui"
elif [ -f "$TUI_DIR/target/release/trimorph-tui" ]; then
    exec "$TUI_DIR/target/release/trimorph-tui"
else
    echo "Error: trimorph-tui binary not found. Please build the project first with 'cd $TUI_DIR && cargo build'"
    exit 1
fi