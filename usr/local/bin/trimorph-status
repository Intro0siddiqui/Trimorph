#!/bin/bash
echo "Active Trimorph Jails:"
for conf in /etc/trimorph/jails.d/*.conf; do
    [[ -f "$conf" ]] || continue
    jail=$(grep -E "^name=" "$conf" | cut -d= -f2)
    scope="trimorph-$jail.scope"
    if systemctl is-active --quiet "$scope" 2>/dev/null; then
        echo "  ✅ $jail (active)"
    else
        echo "  ⏻  $jail"
    fi
done
